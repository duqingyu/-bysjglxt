><button type="button" id="confirm" class="btn btn-success" v-on:click="totijiao()">点击提交</button></td>
</tr>
</table>
    </div>
    <script>
    var vm = new Vue({
        el: "#views",
        data: {
          Number:"",
          Name:"",
          School:"",
          Level:"",
          Major:"",
          Class:"",
          Diplomas:"",
          Phonenumber:"",
           status:""
        },
        mounted: function () {
   
        },
        methods: {
                  totijiao:function(){
              var that = this;
                axios.post(`/tijiao`,{
                 'Number':this.Number,
                 'Name':this.Name,
                 'School':this.School,
                 'Level':this.Level,
                 'Major':this.Major,
                 'Class':this.Class,
                 'Diplomas':this.Diplomas,
                 'Phonenumber':this.Phonenumber,
                })
                    .then(function (res) {
                        if(res.data == 1){
                       alert('提交成功！');
                        }
                        window.location = '/tostudent';
                    })
                    .catch(function (err) {
                        console.log(err);
                    });
           },
}

    })


</script>
</body>
</html>